#
# bspwm hotkeys
#

super + shift + Escape
    bspc quit

super + shift + s
    bspc window -c

super + {a,s,d}
    bspc desktop -f {prev.local,last.local,next.local}

super + f
    bspc window -t fullscreen

super + ctrl + space
    bspc window -t floating

super + apostrophe
    bspc window -s last

super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {comma,period}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + q
    bspc window -p cancel

super + alt + h
    bspc window -e right -10; bspc window -e left -10

super + alt + l
    bspc window -e right +10; bspc window -e left +10

super + alt + j
    bspc window -e up +10; bspc window -e down +10

super + alt + k
    bspc window -e up -10; bspc window -e down -10

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} '^{1-9,10}'

super + {_,shift +}{q,w,e,z,x,c}
    bspc {desktop -f,window -d} '^{4-9}'

super + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

super + v
    bspc control --toggle-visibility


#
# wm independent hotkeys
#

super + Tab
    current_desktop

# move a floating window
super + {Left,Down,Up,Right}
    xdo move {-x -10,-y +10,-y -10,-x +10}

super + ctrl + {Left,Down,Up,Right}
    xdo resize {-w -10,-h +10,-h -10,-w +10}

super + {_,ctrl,alt} + Return
    {termite -e fish,firefox,termite -e ranger}

super + r
    rofi_wrapper

# mpc
F1
    music toggle

F2
    music next

# yt
F3
    mpv --ytdl "$(xclip -o -selection clipboard)"

F4
    mouse

F5
    monitor

# brightness
F6
    xbacklight -5

shift + F6
    xbacklight = 1

F7
    xbacklight +5

shift + F7
    xbacklight = 100


# audio
F8
    pactl set-sink-mute @DEFAULT_SINK@ toggle

F9
    pactl set-sink-volume @DEFAULT_SINK@ -2%

F10
    pactl set-sink-volume @DEFAULT_SINK@ +2%

XF86PowerOff
    lock

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd
