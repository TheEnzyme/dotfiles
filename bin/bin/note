#!/usr/bin/env bash

find_file () {
    FILE=$(find . -name "*$1*.md")

    if [ -z "$FILE" ]; then
        FILE="$(date --rfc-3339='date')-$1.md"
    fi

    echo "$FILE"
}

if [ $# -eq  0 ]; then
    tree ~/usr/notes/

elif [ $# -eq 1 ]; then
    FILE=$( find_file "$1" )
    exec nvim "$FILE"
fi

