#! /usr/bin/env bash

xrdb -load ~/.Xresources

pkill -USR1 termite
pkill -USR1 polybar

bspc config focused_border_color    "#98A9A8"
bspc config active_border_color     "#98A9A8"
bspc config presel_feedback_color    "#E9AD78"
bspc config normal_border_color     "#1D272E"

hsetroot -fill ~/.config/bspwm/backgrounds/trail_bridge.jpg
