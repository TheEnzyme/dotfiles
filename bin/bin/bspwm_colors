#! /usr/bin/env bash

xrdb -load ~/.Xresources

pkill -USR1 termite
pkill -USR1 polybar

bspc config focused_border_color    "#F0F0F0"
bspc config active_border_color     "#F0F0F0"
#bspc config presel_border_color    "#ba9d64"
#bspc config urgent_border_color    "#aa8a81"
bspc config normal_border_color     "#232324"

hsetroot -fill ~/.config/bspwm/backgrounds/river_canyon.jpg
