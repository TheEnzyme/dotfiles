[colors]
background = {{ panel.background }}
background-alt = #444

foreground = {{ panel.foreground }}
foreground-alt = #55

secondary = #e60053
alert = {{ panel.workspaces.urgent }}
focused = {{ panel.workspaces.focused }}

title = {{ panel.title.background }}
mpd = {{ panel.mpd.background }}

battery = {{ panel.battery.med }}


[global/wm]
margin-top = 0

[bar/default]
width = 100%
height = 30
offset-x = 0
offset-y = 0

spacing = 0
padding-left = 0
padding-right = 2
module-margin-left = 0
module-margin-right = 0

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = peep:size=10;0
font-1 = Stlarch:pixelsize=12;-2
font-2 = unifont:size=6:heavy:fontformat=truetype;-2

modules-left = bspwm mpd
modules-center = xwindow
modules-right = wlan seperator memory seperator volume seperator battery seperator date

[module/seperator]
type = custom/text
content = "  "

[module/xwindow]
type = internal/xwindow
label = %title:0:45:...%

format-foreground = ${colors.title}

[module/bspwm]
type = internal/bspwm
;ws-icon-default = x

label-focused = " %name% "
label-focused-background = ${colors.focused}

label-occupied = " %name% "
;label-occupied-padding = 2

label-urgent = " %name% "
label-urgent-background = ${colors.alert}
;label-urgent-padding = 2

label-empty = " %name% "
label-empty-foreground = ${colors.foreground-alt}
;label-empty-padding = 2

[module/mpd]
type = internal/mpd

label-song = "%title% "
icon-pause = 
icon-play = 

format-online = " <toggle> <label-song> "
format-offline =

format-online-background = ${colors.mpd}

label-song-maxlen = 40
label-song-ellipsis = true

toggle-off-foreground = #66

[module/cpu]
type = internal/cpu
interval = 2
label = %percentage%

[module/memory]
type = internal/memory
interval = 2
format-prefix-foreground = ${colors.foreground-alt}
label =  %gb_used%

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 5.0

label-connected =  %essid%
label-disconnected =  N/A
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 10

time = %I:%M %p
label =  %time%

[module/volume]
type = internal/volume

label-muted =  %percentage%
label-volume =  %percentage%

label-volume-foreground = ${colors.foreground}
mapping = false

[module/battery]
type = custom/script
exec = battery
tail = true
label =  %output%

format-background = $(colors.battery)

[module/powermenu]
type = custom/menu

label-open =  power
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

; vim:ft=dosini
